---
layout: default
---
<div class="post">
  <header
    class="post-header"
    {% if page.center_top %}
      style="text-align: center"
    {% endif %}
  >
    {% if page.alt_title %}
      <h1 class="post-title">{{ page.alt_title }}</h1>
    {% else %}
      <h1 class="post-title">
        {% if page.goat %}<i class="fa-solid fa-trophy"></i> {% elsif page.vinyl %}<i class="fa-solid fa-record-vinyl"></i> {% elsif page.year %}<i class="fa-solid fa-calendar"></i> {% endif -%}
        {{- page.title }}
      </h1>
    {% endif %}

    <p class="post-description">{{ page.description }}</p>
  </header>

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
