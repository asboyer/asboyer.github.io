<div class="news">
  {% if site.favs != blank %}
    {% assign favs_size = site.favs | size %}
    <div
      class="table-responsive"
      {% if include.limit and site.latest_notes.scrollable and news_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign favs = site.favs | reverse %}
        {% if include.limit and site.latest_notes.limit %}
          {% assign news_limit = site.latest_notes.limit %}
        {% else %}
          {% assign news_limit = news_size %}
        {% endif %}
        {% for item in favs limit: news_limit %}
          <tr>
            <th scope="row" style="width: 20%">{{ item.date | date: '%b %d, %Y' }}</th>
            <td>
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
                {% if item.redirect == blank %}
                {% else %}
                  {% if item.redirect %}
                    {% if item.redirect contains '://' %}
                      <a class="news-title" href="{{ item.redirect }}" target="_blank">{{ item.title }}</a>
                      <svg width="2rem" height="2rem" viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
                        <path
                          d="M17 13.5v6H5v-12h6m3-3h6v6m0-6-9 9"
                          class="icon_svg-stroke"
                          stroke="#999"
                          stroke-width="1.5"
                          fill="none"
                          fill-rule="evenodd"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        ></path>
                      </svg>
                    {% else %}
                      <a class="news-title" href="{{ item.redirect | relative_url }}">{{ item.title}}</a>
                    {% endif %}
                  {% endif %}
                {% endif %}
              {% else %}
              <a class="news-title" href="{{ item.url | relative_url }}">{{ item.title }}</a><span style="font-size: .75rem; font-weight: 20; margin-left: 5px">{% if item.creator %}by {{ item.creator }}{% endif %}</span>
              {% endif %}
            </td>
      {% for category in item.categories %}

            <th scope="row" style="font-size: .875rem; font-weight: 200"><i class="fa-solid fa-hashtag fa-sm"></i><a href="{{ category | slugify | prepend: '/favs/' | relative_url }}">{{ category }}</a></th>
      {% endfor %}

            </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No notes so far...</p>
  {% endif %}
</div>
