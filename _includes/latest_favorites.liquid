<div class="news">
  {% if site.favs != blank %}
    {% assign favs_size = site.favs | size %}
    <div
      class="table-responsive"
      {% if site.latest_favs.scrollable and favs_size  > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless" style="margin: 0px">
        {% assign favs = site.favs | reverse %}


        {% if site.latest_favs.limit %}
          {% assign favs_limit = site.latest_favs.limit %}
        {% endif %}
        {% for item in favs limit: favs_limit %}

            <tr>
              <!-- add an image here! -->
              {% if item.img %}
                <th scope="row" style="width: 20%; padding-right: 10px; padding-left: 0px !important">
                  {% include figure.liquid home=true path=item.img sizes="(min-width: 768px) 156px, 50vw" alt="project thumbnail" %}
                </th>
              {% endif %}

              <td style="vertical-align: middle;">
                <span style="font-size: .85rem">{{ item.date |  date: '%b %d, %Y' }}</span><br>
                {% if item.redirect == blank %}
                <a class="news-title" style="font-size: 1.2rem" href="{{ item.url | relative_url }}">{{ item.title }}</a><span style="font-size: .85rem; font-weight: 20; margin-left: 5px">{% if item.creator %}by {{ item.creator }}{% endif %}</span>
                {% elsif item.redirect contains '://' %}
                <a class="news-title" style="font-size: 1.2rem" href="{{ item.redirect }}" target="_blank">{{ item.title }}</a><span style="font-size: 1rem; font-weight: 20; margin-left: 5px">{% if item.creator %}by {{ item.creator }}{% endif %}</span>
                  <svg width="2rem" height="1.2rem" viewBox="0 0 60 35" xmlns="http://www.w3.org/2000/svg">
                    <path
                      d="M17 13.5v6H5v-12h6m3-3h6v6m0-6-9 9"
                      class="icon_svg-stroke"
                      stroke="#999"
                      stroke-width="1.5"
                      fill="none"
                      fill-rule="evenodd"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    ></path>
                  </svg>
                {% else %}
            <a class="news-title" style="font-size: 1.2rem" href="{{ item.url | relative_url }}">{{ item.title }}</a><span style="font-size: .85rem; font-weight: 20; margin-left: 5px">{% if item.creator %}by {{ item.creator }}{% endif %}</span>
                {% endif %}
                <br>
                {% for category in item.categories %}

                    <span style="font-size: .85rem; font-weight: 200"><i class="fa-solid fa-hashtag fa-sm"></i><a href="{{ category | slugify | prepend: '/favs/' | relative_url }}">{{ category }}</a></span>
              {% endfor %} 
              </td>

            </tr>

        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No projects so far...</p>
  {% endif %}
</div>
